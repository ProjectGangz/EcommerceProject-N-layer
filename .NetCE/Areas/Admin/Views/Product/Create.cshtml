@model ProjectEcommerce.Models.ViewModels.ProductVM
<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Create Product</h2>
			</div>
		</div>
		<div class="card-body p-4">
			<form method="post" class="row" enctype="multipart/form-data">
				<div class="border p-3">
					
					@* <div asp-validation-summary="ModelOnly"></div> *@
					<div class="form-floating py-2 col-12">
						<input type="text"  class="form-control border-0 shadow" asp-for="Product.Title" />
						<label asp-for="Product.Title" class="ms-2"></label>
						
						<span asp-validation-for="Product.Title" class="text-danger"></span>
					</div>
					<div class="form-floating py-2 col-12">
						<input type="text" class="form-control border-0 shadow" asp-for="Product.Description" />
						<label asp-for="Product.Description" class="ms-2"></label>
						
						<span asp-validation-for="Product.Description" class="text-danger"></span>
					</div>
					<div class="form-floating py-2 col-12">
						<input type="text" class="form-control border-0 shadow" asp-for="Product.ListPrice" />
						<label asp-for="Product.ListPrice" class="ms-2"></label>
						
						<span asp-validation-for="Product.ListPrice" class="text-danger"></span>
					</div>
					<div class="form-floating py-2 col-12">
						<input type="text" class="form-control border-0 shadow" asp-for="Product.Price" />
						<label asp-for="Product.Price" class="ms-2"></label>

						<span asp-validation-for="Product.Price" class="text-danger"></span>
					</div>
					<div class="form-floating py-2 col-12">
						<input type="text" class="form-control border-0 shadow" asp-for="Product.ListPrice50" />
						<label asp-for="Product.ListPrice50" class="ms-2"></label>

						<span asp-validation-for="Product.ListPrice50" class="text-danger"></span>
					</div>
					<div class="form-floating py-2 col-12">
						<input type="text" class="form-control border-0 shadow" asp-for="Product.ListPrice100" />
						<label asp-for="Product.ListPrice100" class="ms-2"></label>

						<span asp-validation-for="Product.ListPrice100" class="text-danger"></span>
					</div>
					<div class="form-floating py-2 col-12">
						<input type="file" class="form-control border-0 shadow" asp-for="Product.ImageUrl" />
						<label asp-for="Product.ImageUrl" class="ms-2"></label>

						<span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
					</div>
					<div class="form-floating py-2 col-12">
						@* <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select"> *@
						@* <select asp-for="Product.CategoryId" asp-items="@ViewData["CategoryItems"] as IEnumerable<SelectListItem>" class="form-select"> *@
						<select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategotyList" class="form-select">
							<option disabled selected>--Select a Category</option>
						</select>
						
						<label asp-for="Product.CategoryId" class="ms-2"></label>

						<span asp-validation-for="Product.CategoryId" class="text-danger"></span>
					</div>
					<div class="row">
						<div class="col-6 col-md-3">
							<button type="submit" class="btn btn-primary form-control">Create</button>

						</div>
						<div class="col-6 col-md-3">
							<a asp-controller="Category" asp-action="Index" class="btn btn-primary form-control">
								Back to List
							</a>
						</div>
					</div>

				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts{
	@{
	<partial name="_ValidationScriptsPartial" />
	}
}